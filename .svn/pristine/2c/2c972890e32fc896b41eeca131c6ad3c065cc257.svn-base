function [sector] = sector_dividing8(tangle)
% sector：将锋面梯度方向（横锋方向）分为8个区域，梯度方向为X-->NUM(1-8)，具体如下:
    %------> y
    % |   6 5 4
    % |   7 X 3
    % x  8 1 2      
    [m,n] = size(tangle);
    s1 = find(tangle >= -22.5 & tangle <= 22.5);
    s2 = find(tangle >= 22.5 & tangle < 67.5);
    s3 = find(tangle>=67.5 & tangle<112.5);
    s4 = find(tangle>=112.5 & tangle<157.5);
    s5 = find((tangle>=157.5 & tangle <180) | ...
                   (tangle>=-180 & tangle < -157.5));
    s6 = find(tangle>=-157.5 & tangle<-112.5);
    s7 = find(tangle>=-112.5 & tangle<-67.5);
    s8 = find(tangle>=-67.5 & tangle<-22.5);
    s0=find(isnan(tangle));
    
    sector=zeros(m,n);
    sector(s1)=1;
    sector(s2)=2;
    sector(s3)=3;
    sector(s4)=4;
    sector(s5)=5;
    sector(s6)=6;
    sector(s7)=7;
    sector(s8)=8;    
    sector(s0)=0;
end